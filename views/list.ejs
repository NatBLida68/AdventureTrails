<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
     <!-- css node - express.static -->
    <link rel="stylesheet" href="/css/bootstrap.min.css">  
     <!-- css custom -->
     <link rel="stylesheet" href="/stylesheets/main.css">  
</head>
<body>
    <div>
        <a href="/me/list" class="btn btn-info ml-3">Refresh</a>
    </div>    
    <!--   <% if (messages.error) { %>
      <p style="color:red"><%- messages.error %></p>
    <% } %> -->
    <% if (messages.success) { %>
        <p class="alert alert-success mt-4"><%- messages.success %></p>
    <% } %>  
    <br>
      <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">Action </th>

     
      </tr>
    </thead>
    <tbody>
      <% if(data.length){
     
      for(var i = 0; i< data.length; i++) {%>  
      <tr>
        <th scope="row"><%= (i+1) %></th>
        <td class="name"><%= data[i].userName%></td>
        <td class="email"><%= data[i].email%></td>
        <td class="user"><button oid=<%= data[i]._id %> class="btn btn-danger btn-del">Delete</button>
          <button oid=<%= data[i]._id %> class="btn btn-primary btn-update">Update</button></td>
      </tr>
      <% }
               
       }else{ %>
           <tr>
              <td colspan="3">No user</td>
           </tr>
        <% } %>    
      
    </tbody>
    </table>
    <%- include('./model.ejs') %>  <!-- include model html code -->

    <!-- scripts from node redirected in app.js with express.static -->
      <script src="/js/jquery.min.js"></script>
      <script src="/js/bootstrap.min.js"></script>
      <!-- scripts from public-->
      <script src="/javascripts/main.js"></script>
</body>
</html>